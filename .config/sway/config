set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $term footclient
set $menu j4-dmenu-desktop --dmenu="bemenu -i --fn 'Free Mono 16'" --use-xdg-de --no-exec | xargs swaymsg exec --

bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Logout?' -B 'Yes' 'swaymsg exit'

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

bindsym $mod+Shift+1 move container to workspace number 1; workspace 1
bindsym $mod+Shift+2 move container to workspace number 2; workspace 2
bindsym $mod+Shift+3 move container to workspace number 3; workspace 3
bindsym $mod+Shift+4 move container to workspace number 4; workspace 4
bindsym $mod+Shift+5 move container to workspace number 5; workspace 5

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+f fullscreen

bindsym {
	XF86MonBrightnessUp exec xbacklight -inc 5
	XF86MonBrightnessDown exec xbacklight -dec 5

	XF86AudioRaiseVolume exec amixer -Mq set Master 5%+
	XF86AudioLowerVolume exec amixer -Mq set Master 5%-

	XF86AudioMute exec amixer -Mq set Master toggle
}

bindsym --whole-window $mod+BTN_SIDE exec playerctl play-pause

bindsym Print exec grim - | wl-copy
bindsym Shift+Print exec grim -g "$(slurp)" - | wl-copy

font Free Mono 12

bar {
	position top

	font Free Mono 12
	
	status_command ~/Documents/GitHub/nowhere-status/bin/nowhere-status

	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

exec foot -s
exec wlsunset -l 47.6 -L -122.2 -t 3500 -T 6000

include /etc/sway/config.d/*
